generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  books Book[]
}

model Book {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "FK_Book_User")
  prices Price[]

  @@index([userId], map: "Book_userId_fkey")
}

model Price {
  id Int @id @default(autoincrement())
  bookId Int
  amount String
  Book Book @relation(fields: [bookId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
